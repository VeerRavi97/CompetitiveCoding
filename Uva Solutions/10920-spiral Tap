
#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
int main()
{
ll sz,t,x,y,r,diff,rno,side;

    while(cin >> sz >> t, sz||t)
  {
	 r = 1;
    x=(sz+1)/2;// mid points
    y=(sz+1)/2;
	while(r*r<t) //appropriate root
        r+=2;
    rno=r/2+1; // find ring
    ll in=(sz-r)/2; // ring from outside
    diff=r*r-t; // target difference in that ring
    if(t!=1) // 1st ring excluded ie mid points excluded 
    {
      side=diff/(r-1);//  out of 4 sides
       switch(side)
       {
           case 0:
       {
        x+=rno-1;
        y=sz-(in+diff);
        break;
        }
      case 1:
      {
         y-=rno-1;
         x=sz-(in+(r*r-(r-1))-t);
         break;
      }
     case 2:
      {
        x-=rno-1;
        y=(in+r*r -2*(r-1)) -t+1;
        break;
      }
     case 3:
     {
     y+=rno-1;
     x=(in+r*r -3*(r-1)) -t+1;
     break;
     }
       }

}
  cout << "Line = " << y << ", column = " << x << ".\n";
  }
    return 0;
}
