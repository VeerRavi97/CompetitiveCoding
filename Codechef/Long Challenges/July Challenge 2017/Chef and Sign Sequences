#include<bits/stdc++.h>
using namespace std;
int main()
{
    ios :: sync_with_stdio(0);
    cin.tie(0);
    int tc;
    cin >> tc;
    cin.ignore();
    while(tc--)
    {
       string s,s1;
       cin >> s;
       for(int i=0;i<s.length();i++)
       {
           if(s[i]!='=')
            s1.push_back(s[i]);
       }
    // cout << "s1 " << s1 << "\n";
       int coun,ans=0,cn;
       for(int i=0;i<s1.length();)
       {
           int j=i;
           coun=0;
           while(s1[j]==s1[i])
          {
              j++;
              coun++;

          }
          i=i+coun;
          // cout << "count " << coun << "\n";
          ans=max(ans,coun);


       }
       cout << ans +1 << "\n";
    }

}
